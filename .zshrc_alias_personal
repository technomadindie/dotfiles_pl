# Abbreviations
alias a='alias'
alias c='clear'
alias g='grep'
alias gg='gvim'
alias h='history'
alias ll='ls -ltr'
alias la='ls -altr'
alias dir='ls -l'
alias hg='history | grep'
alias po='popd'
alias pu='pushd'
alias n='nvim'

alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gpo='git push origin'
alias gtd='git tag --delete'
alias gtdr='git tag --delete origin'
alias gr='git branch -r'
alias gplo='git pull origin'
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias gdt='git difftool'
alias gco='git checkout '
alias gl='git log'
alias gr='git remote'
alias grs='git remote show'
alias glo='git log --pretty="oneline"'
alias glol='git log --graph --oneline --decorate'

# Program aliases
alias checkbuild='egrep -i "(\*\*|error)" "$@" | grep -v ignore'
alias nv='cd $NV'
alias igrep='grep -i'
alias lc='wc -l'
alias cat='bat --paging=never'

# Git aliases
alias gpush='git push origin HEAD' # means we are pushing current branch to remote branch of same name
alias gpull='git fetch origin && git pull origin' # means we are pulling current branch to remote branch of same name

#alias gpush='git push origin HEAD:main' # means we are pushing current branch to remote branch "main"

# Custom aliases
alias d='dirs -v'
for index ({1..20}) alias "$index"="cd +${index}"; unset index
# Environment paths

# Environment variables

# Navigation aliases
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias .-='cd -'

# Other custom aliases
alias re='realpath'
alias fs='fd --type f | fzf'
alias swp_find='find . -type f -iname ".*" | grep swp'


## PATHS
export EDITOR='nvim'
